<?xml version="1.0"?>
<Container version="2">
  <Name>alpha-video</Name>
  <Repository>alpha-video:latest</Repository>
  <Registry>https://hub.docker.com/r/andrewstech/alpha-video</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://discord.gg/FYpCjJYbRb</Support>
  <Project>https://github.com/unofficial-skills/alpha-video</Project>
  <Overview>A skill to stream audio from Youtube to Your Alexa. </Overview>
  <Category>Security: Network:Web Status:Stable</Category>
  <WebUI/>
  <TemplateURL>https://github.com/Kippenhof/docker-templates/blob/main/alpha-video.xml</TemplateURL>
  <Icon>https://i.imgur.com/68ihmOW.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DonateText>Buy Andrew a Drink</DonateText>
  <DonateLink>https://paypal.me/andrewstechyoutube</DonateLink>
  <Description>With Alpha Video you can easily play music from Youtube on your Alexa device. All you need is the container and a proper configured connection to Alexa. Instructions: https://alpha-video.andrewstech.me/docs/doc4</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>5000</HostPort>
        <ContainerPort>5000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data/>
 <Environment>
    <Variable>
     <Name>subdomain</Name>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="Alpha Video Port" Target="5000" Default="" Mode="tcp" Description="Alpha-VIdeo Port port: 5000" Type="Port" Display="always" Required="true" Mask="false"/>
  <Config Name="subdomain" Target="subdomain" Default="get_creative!" Mode="" Description="Your Subdomain which gets generated (later: yoursubdomain.loca.lt)" Type="Variable" Display="always" Required="true" Mask="false"/>
 </Container>